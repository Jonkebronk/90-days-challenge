  category          String? // "Strength", "Cardio", "HIIT", "Stretching", etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercises  WorkoutTemplateExercise[]
  usageCount Int                       @default(0) // Track how many times it's been used

  @@map("workout_templates")
}

model WorkoutTemplateExercise {
  id                String @id @default(cuid())
  workoutTemplateId String
  exerciseId        String

  // Exercise configuration
  sets        Int // Number of sets
  repsMin     Int? // Minimum reps
  repsMax     Int? // Maximum reps
  restSeconds Int     @default(60)
  notes       String? // Exercise-specific notes

  orderIndex Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workoutTemplate WorkoutTemplate @relation(fields: [workoutTemplateId], references: [id], onDelete: Cascade)
  exercise        Exercise        @relation(fields: [exerciseId], references: [id])

  @@map("workout_template_exercises")
}

// Messages and Check-in Summaries
model Message {
  id         String @id @default(cuid())
  content    String @db.Text
  senderId   String
  receiverId String

  // If this is a weekly check-in summary
  isCheckInSummary Boolean @default(false)
  checkInId        String? // Reference to the check-in if summary

  // Images attached to message
  images String[] // Array of image URLs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sender   User @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId, receiverId])
  @@index([createdAt])
  @@map("messages")
}

// Onboarding Progress - Track client onboarding journey
model OnboardingProgress {
  id     String @id @default(cuid())
  userId String @unique

  // Checklist progress (bitwise flags or individual booleans)
  profileCompleted      Boolean @default(false)
  profilePhotosUploaded Boolean @default(false)
  reviewedMealPlan      Boolean @default(false)
  reviewedWorkoutPlan   Boolean @default(false)
  firstCheckInDone      Boolean @default(false)

  // Guide/introduction views
  mealPlanGuideViewed Boolean @default(false)
  workoutGuideViewed  Boolean @default(false)

  // Completion state
  dashboardOnboardingDismissed Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("onboarding_progress")
}

// Guide Content - Editable introduction/guide content
model GuideContent {
  id      String @id @default(cuid())
  type    String @unique // "meal_plan" or "workout"
  title   String // Page title
  content String @db.Text // MDX content

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("guide_content")
}

// ========================================
// Shopping List System
// ========================================

// Shopping List - Multiple lists per user (veckohandling, festlista, etc.)
model ShoppingList {
  id          String   @id @default(cuid())
  name        String // "Veckohandling", "Fredagsmiddag", "Snabbköp"
  userId      String // Owner (coach or client)
  createdBy   String // Coach ID if created by coach
  description String?
  color       String   @default("#FFD700") // Visual categorization color

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items  ShoppingListItem[]
  shares ShoppingListShare[]

  @@index([userId])
  @@index([createdAt])
  @@map("shopping_lists")
}

// Shopping List Item - Individual items in a shopping list
model ShoppingListItem {
  id     String @id @default(cuid())
  listId String
  list   ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)

  // Food item from database OR custom item
  foodItemId String?
  foodItem   FoodItem? @relation(fields: [foodItemId], references: [id])
  customName String? // If not from food bank

  quantity   Float   @default(1)
  unit       String  @default("st") // st, kg, g, l, dl, msk, tsk, etc.
  category   String  @default("Övrigt") // Frukt & Grönt, Mejeri, Kött, etc.

  checked    Boolean @default(false)
  orderIndex Int     @default(0)
  notes      String? // "ekologisk", "färsk", etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([listId, checked])
  @@index([listId, category])
  @@map("shopping_list_items")
}

// Shopping List Share - Share lists with family/household members
model ShoppingListShare {
  id         String @id @default(cuid())
  listId     String
  list       ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)
  sharedWith String // User ID or email for pending invites
  role       String  @default("editor") // "viewer" or "editor"
  accepted   Boolean @default(false)

  createdAt DateTime @default(now())

  @@unique([listId, sharedWith])
  @@index([sharedWith])
  @@map("shopping_list_shares")
}

// Nutrition Reference Tables (Admin-managed)
model NutritionCategory {
  id          String   @id @default(cuid())
  type        String // "protein", "fat", "carbs"
  key         String // Unique key like "egg-dairy", "nuts", etc.
  name        String // Display name like "Ägg & Mejeri"
  order       Int      @default(0) // Display order in tabs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items NutritionItem[]

  @@unique([type, key])
  @@index([type, order])
  @@map("nutrition_categories")
}

model NutritionItem {
  id           String   @id @default(cuid())
  categoryId   String
  name         String // Food item name
  valuePer100g Decimal  @db.Decimal(6, 2) // Nutrition value per 100g
  customValues Json?    // Manual values for each target: {20: 100, 25: 125, 30: 150, ...}
  order        Int      @default(0) // Display order within category
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  category NutritionCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId, order])
  @@map("nutrition_items")
}
